<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#988FA8"
    android:backgroundTint="#D6DBF4"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jogodavelha_logo"
        android:maxWidth="128dp"
        android:maxHeight="128dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
    />


    <TextView
        android:id="@+id/playerXLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="192dp"
        android:text="Nome do jogador X"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/logo"
    />

    <EditText
        android:id="@+id/playerXName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="Inserir nome..."
        android:textColor="#444"
        app:layout_constraintTop_toBottomOf="@id/playerXLabel"
        app:layout_constraintLeft_toLeftOf="@id/playerXLabel"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
    />

    <TextView
        android:id="@+id/playerOLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Nome do jogador O"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/playerXLabel"
        app:layout_constraintTop_toBottomOf="@id/playerXName"
    />

    <EditText
        android:id="@+id/playerOName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="Inserir nome..."
        android:textColor="#444"
        app:layout_constraintTop_toBottomOf="@id/playerOLabel"
        app:layout_constraintLeft_toLeftOf="@id/playerOLabel"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
    />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Jogo"
        app:layout_constraintTop_toBottomOf="@+id/playerOName"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>